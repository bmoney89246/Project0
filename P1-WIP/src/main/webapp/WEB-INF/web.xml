<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>FormServlet</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>FormServlet</servlet-name>
		<servlet-class>com.revature.servlet.FormSubmissionServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>FormServlet</servlet-name>
		<url-pattern>/form</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Redirect</servlet-name>
		<servlet-class>com.revature.servlet.RedirectServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Redirect</servlet-name>
		<url-pattern>/redirect</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Forward</servlet-name>
		<servlet-class>com.revature.servlet.ForwardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Forward</servlet-name>
		<url-pattern>/Forward</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>LoginServlet</display-name>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.revature.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<!-- Sevlet context, is avilable to all servlets -->
	<context-param>
		<param-name>message</param-name>
		<param-value>Welcome to our website</param-value>
	</context-param>
	<servlet>
		<servlet-name>EmpHome</servlet-name>
		<servlet-class>com.revature.servlet.HomeServlet</servlet-class>
		<init-param>
			<param-name>role</param-name>
			<param-value>employee</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>EmpHome</servlet-name>
		<url-pattern>/emp</url-pattern>
		<!-- Servlet config is available to a specific servlet -->
	</servlet-mapping>
	<servlet>
		<servlet-name>manHome</servlet-name>
		<servlet-class>com.revature.servlet.HomeServlet</servlet-class>
		<init-param>
			<param-name>role</param-name>
			<param-value>manager</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>manHome</servlet-name>
		<url-pattern>/man</url-pattern>
	</servlet-mapping>

</web-app>